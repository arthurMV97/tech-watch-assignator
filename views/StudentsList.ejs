<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="navbar.css" />
    <link rel="stylesheet" href="footer.css" />
    <link rel="stylesheet" href="main.css" />
    <link rel="stylesheet" href="background.css" />
    <title>Student List</title>
  </head>
  <style>
    h2 {
      text-align: center;
    }
    li {
      list-style: none;
    }
    .mainDiv {
      text-align: center;
      color: black;
      border-radius: 30px 30px 30px 30px;
      box-shadow: 5px 5px 10px 3px #4d4a4a;
      padding: 3% 3% 3% 3%;
      margin: 5% 15% 0% 15%;
      margin-bottom: 5%;
      background-color: rgba(243, 181, 217, 0.6);
    }
  </style>
  <body>
    <%- include('partial/navbar') %>

    <div class="mainDiv">
      <h2>List of students</h2>

      <ul>
        <% for (var i = 0; i < studentArray.length ; i++) { %>
        <li><%= studentArray[i].name %></li>
        <% } %>
      </ul>

      <form action="/StudentsList" method="POST">
        <label for="name">Add student</label>
        <input type="text" name="name" />
        <button type="submit">Add student</button>
      </form>

      <form action="/StudentsListDelete" method="POST">
        <label for="nameToDelete">Delete student</label>
        <select id="nameToDelete" name="nameToDelete" place>
          <option>Select a name</option>
          <% for (var i = 0; i < studentArray.length ; i++) { %>
          <option><%= studentArray[i].name %></option>
          <% } %>
        </select>
        <button type="submit">Delete student</button>
      </form>
      
    </div>
    <%- include('partial/footer') %>
    <div class="bg"></div>
    <div class="bg bg2"></div>
    <div class="bg bg3"></div>
  </body>
</html>
